/* pages/chaoxi/index.wxss */
.header {
  margin-top: 10px;
  margin: 0 auto;
  width: 96%;
}

ec-canvas {
  width: 100%;
  height: 60%;
}

.chart {
  position: absolute;
  margin-top: 100px;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.line {
  width: 100%;
  height: 2rpx;
  background: #aaa;
  margin: 5rpx 0;
}

.city {
  position: fixed;
  left: 20rpx;
  top: 10rpx;
}

.city button {
  font-size: 24rpx;
}

.date {
  /*margin-top: -10rpx;*/
  text-align: center;
  align-items: center;
  font-size: 45rpx;
}

.date-last {
  font-weight: bolder;
}

.date-next {
  font-weight: bolder;
}

.high-low {
  margin: 0 auto;
  width: 70%;
  font-size: 30rpx;
  margin-top: 50rpx;
  align-content: center;
  text-align: center;
}